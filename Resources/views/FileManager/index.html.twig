{% extends 'tsCMSSystemBundle::layout.html.twig' %}
{% block title %}Filarkiv{% endblock %}
{% block content %}
    <div class="container-fluid">
        <div class="col-xs-6">
            <div class="box box-blue">
                <div class="box-header">
                    <div class="box-title">
                        {{ "filemanager.uploadFiles"|trans }}
                    </div>
                </div>
                <div class="box-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="box">
                <div class="box-header">
                    <div class="box-title">
                        {{ "filemanager.createDirectory"|trans }}
                    </div>
                </div>
                <div class="box-body">
                    {{ form(directoryForm) }}
                </div>
            </div>
        </div>
    </div>


    <div class="container-fluid filearchive">
        <div class="col-lg-12">

            <a href="{{ path("tscms_filemanager_filemanager_index") }}">{{ "filemanager.name"|trans }}</a>
            {% for path,name in pathParts %}
                /
                <a href="{{ path("tscms_filemanager_filemanager_index",{dir: path }) }}">{{ name }}</a>
            {% endfor %}

            <hr/>
        </div>
        {% for directory in directories%}
            <a href="{{ path("tscms_filemanager_filemanager_index",{dir: currentDirectory ~ directory.relativePathname}) }}" class="directory">
                <i class="fa fa-folder"></i>
                {{ directory.filename }}
            </a>
        {% endfor %}
        {% for file in files %}
            <a href="" class="file">
                {% if file.filename|lower ends with 'jpg'
                    or file.filename|lower ends with 'png'
                    or file.filename|lower ends with 'gif'
                %}
                    <span>
                        <img src="/upload/{{ currentDirectory ~ file.relativePathname }}" alt="{{ file.filename }}"/>
                    </span>
                {% else %}
                    <i class="fa fa-file"></i>
                {% endif %}
                {{ file.filename }}
            </a>
        {% endfor %}
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
        'bundles/tscmsfilemanager/css/filearchive.css'
        filter='cssrewrite'
    %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{% endblock %}